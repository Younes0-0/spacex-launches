---
import {type APISpaceXResponse} from "../types/api"

    const res = await fetch("https://api.spacexdata.com/v5/launches/query",{
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({
            query:{},
            options:{
                sort: {
                    date_unix:'asc'
                },
                limit:12
            }
        })
    })
const {docs : launchers} = await res.json() as APISpaceXResponse

    
---
<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        launchers.map(launch => (
            <article class="flex flex-col items-center m-auto">
                <h2 class="text-2xl">Launcher {launch.name}</h2>
                <img src={launch.links.patch.small} alt="">
                <p>{launch.fairings?.recovered}</p>
            </article>
        ))
    }
    

</div>